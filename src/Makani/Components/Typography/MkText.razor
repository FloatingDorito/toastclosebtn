@namespace Makani
@inherits MkComponent

@switch (Type)
{
    case Typo.H1:
        <h1 class="text-4xl text-gray-800 dark:text-gray-50 font-bold tracking-wide my-4 @Css">@ChildContent</h1>
        break;
    case Typo.H2:
        <h2 class="text-3xl text-gray-800 dark:text-gray-50 font-bold tracking-wide my-4 @Css">@ChildContent</h2>
        break;
    case Typo.H3:
        <h3 class="text-2xl text-gray-800 dark:text-gray-50 font-bold tracking-wide my-4 @Css">@ChildContent</h3>
        break;
    case Typo.H4:
        <h4 class="text-xl text-gray-800 dark:text-gray-50 font-bold tracking-wide my-4 @Css">@ChildContent</h4>
        break;
    case Typo.H5:
        <h5 class="text-base text-gray-800 dark:text-gray-50 font-bold tracking-wide mt-4 @Css">@ChildContent</h5>
        break;
    case Typo.H6:
        <h6 class="text-sm text-gray-800 dark:text-gray-50 font-bold tracking-wide mt-4 @Css">@ChildContent</h6>
        break;
    case Typo.Caption:
        <span class="font-medium text-sm text-gray-500 font-mono mb-3 dark:text-gray-400 @Css">@ChildContent</span>
        break;
    case Typo.Body:
    default:
        <p class="text-base text-gray-800 dark:text-gray-50 my-2 @Css">@ChildContent</p>
        break;
}


@code {
    [Parameter]
    public Typo Type { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
